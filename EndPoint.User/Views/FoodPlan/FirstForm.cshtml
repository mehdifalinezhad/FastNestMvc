    <script type="text/javascript">
        function getCity() {
            var stateId=document.getElementById("theState").value;
            $.ajax({
                url: '/FoodPlan/CallGetCitys',
                type: 'get',
                data: { thestateId:stateId },
                success:function (response){
                var citysSelect=$("#citySelect");
                citysSelect.empty();
                $.each(response,function(i,city){
                citysSelect.append("<option value='"+city.id+"'>"+city.name+"</option>")
                })
                },
                error: function (xhr, status, error) {
                    console.error("خطا در دریافت شهر ها" + error);
                }
            });
        };
    </script>
