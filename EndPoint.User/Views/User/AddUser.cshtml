@using Application.Dto
@model UserDto
    <!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- register section starts -->
                <section class="row flexbox-container">
                    <div class="col-xl-8 col-10">
                        <div class="card bg-authentication mb-0">
                            <div class="row m-0">
                                <!-- register section left -->
                                <div class="col-md-8 col-12 px-0">
                                    <div class="card disable-rounded-right mb-0 p-2 h-100 d-flex justify-content-center">
                                        <div class="card-header pb-1">
                                            <div class="card-title">
                                                <h4 class="text-center mb-2">ثبت نام</h4>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <p>
                                                <small class="line-height-2 d-inline-block"> لطفا جزئیات خود را برای ثبت نام وارد کرده و عضوی از جامعه عالی ما شوید.</small>
                                            </p>
                                        </div>
                                        <div class="card-content">
                                            <div class="card-body">
                                                <form method="post" asp-action="AddUser" asp-controller="User">
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-50">
                                                            <label for="inputfirstname4">نام</label>
                                                            <input type="text" asp-for=FirstName" class="form-control" id="inputfirstname4" placeholder="نام">
                                                            <span asp-validation-for="FirstName" text-danger="red"></span>
                                                        </div>
                                                        <div class="form-group col-md-6 mb-50">
                                                            <label for="inputlastname4">نام خانوادگی</label>
                                                            <input type="text" asp-for="LastName" class="form-control" id="inputlastname4" placeholder="نام خانوادگی">
                                                            <span asp-validation-for="LastName" text-danger="red"></span>
                                                        </div>
                                                  </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700" for="exampleInputUsername1">نام کاربری</label>
                                                        <input type="text" asp-for="UserName" class="form-control text-left" id="exampleInputUsername1" placeholder="نام کاربری" dir="ltr">
                                                            <span asp-validation-for="UserName" text-danger="red"></span>
                                                    </div>
                                                        <div class="form-group col-md-6 mb-50">
                                                        <label class="text-bold-700" for="exampleInputEmail1">آدرس ایمیل</label>
                                                        <input type="text" asp-for="Email" class="form-control text-left" id="exampleInputEmail1" placeholder="آدرس ایمیل" dir="ltr">
                                                            <span asp-validation-for="Email" text-danger="red"></span>
                                                    </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-2">
                                                        <label class="text-bold-700" for="exampleInputPassword1">رمز عبور</label>
                                                        <input type="text" asp-for="Password"  class="form-control text-left" id="exampleInputPassword1" placeholder="رمز عبور" dir="ltr">
                                                        <span asp-validation-for="Password" text-danger="red"></span>      
                                                        </div>
                                                        <div class="form-group col-md-6 mb-2">
                                                        <label class="text-bold-700">تکرار رمز عبور </label>
                                                        <input type="text" class="form-control text-left" asp-for="ComfirmPassword" id="exampleInputConfirmPassWord" placeholder="تکرار رمز " dir="ltr">
                                                            <span asp-validation-for="ComfirmPassword" text-danger="red"></span>
                                                    </div>
                                                        <div class="form-row">
                                                            <div class="form-group col-md-12 mb-2">
                                                                <label class="text-bold-700">شماره تماس </label>
                                                                <input type="text" class="form-control text-left" asp-for="PhoneNumber" id="exampleInputPassword1" placeholder="شماره تماس" dir="ltr">
                                                                <span asp-validation-for="PhoneNumber" text-danger="red"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <button type="submit" class="btn btn-primary glow position-relative w-100">ثبت نام<i id="icon-arrow" class="bx bx-left-arrow-alt"></i></button>
                                                </form>
                                                <hr>
                                                <div class="text-center"><small class="mr-25">حساب کاربری دارید؟</small><a href="/User/AddUser"><small>ورود</small> </a></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- image section right -->
                              <div class="col-md-4 d-md-block d-none text-center align-self-center p-3">
                                <div class="card-content">
                                    <img class="img-fluid" src="~/FrestAssets/images/pages/register.png" alt="branding logo">
                                </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- register section endss -->
            </div>
        </div>
    </div>

